{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bootstrap",
      "type": "shell",
      "command": [
        "mkdir -p ./tests/build/ && cd ./tests/build/ && cmake .."
      ],
      "group": "build"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "options": { "cwd": "./tests/build/" },
      "group":{
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "make test",
      "options": { "cwd": "./tests/build" },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "coverage",
      "type": "shell",
      "command": "make coverage",
      "options": { "cwd": "./tests/build" },
      "group": "test"
    }
  ]
}